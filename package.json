{
    "name": "boilerplate",
    "version": "1.0.0",
    "description": "BurundangaStudio Nuxt boilerplate.",
    "author": "BurundangaStudio",
    "private": true,
    "engines": {
        "node": ">=9.4.0",
        "npm": ">=5.6.0"
    },
    "config": {
        "nuxt": {
            "host": "0.0.0.0",
            "port": "3000"
        }
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nuxt",
        "build": "cross-env NODE_ENV=prod nuxt build",
        "start": "cross-env NODE_ENV=prod nuxt start",
        "generate": "cross-env NODE_ENV=prod nuxt generate",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "precommit": "npm run lint"
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.3.1",
        "autoprefixer": "^8.6.5",
        "axios": "^0.18.0",
        "babel-polyfill": "^6.26.0",
        "es6-promise": "^4.2.4",
        "gsap": "^2.0.1",
        "lodash": "^4.17.5",
        "node-sass": "^4.8.3",
        "nuxt": "^1.0.0",
        "nuxt-sass-resources-loader": "^2.0.0",
        "sass-loader": "^6.0.7",
        "vue-i18n": "^7.6.0"
    },
    "devDependencies": {
        "babel-eslint": "^8.2.1",
        "cross-env": "^5.2.0",
        "eslint": "^4.15.0",
        "eslint-friendly-formatter": "^3.0.0",
        "eslint-loader": "^1.7.1",
        "eslint-plugin-vue": "^4.0.0"
    }
}
